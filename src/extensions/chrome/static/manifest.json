{
  "manifest_version": 3,
  "name": "FilterdIn",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "48": "icons/border-48.png"
    }
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "js": ["filterdin.js"],
      "matches": ["*://*.linkedin.com/feed/*"]
    }
  ]
}

